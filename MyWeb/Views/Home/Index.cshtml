@using MyWeb.Models
@{
    ViewData["Title"] = "Сотрудники";
}
@model IEnumerable<Emp>

<h1>@ViewData["Message"]</h1>
<table class="table">
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
            Имя
            </a> 
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.AgeSort">
            Возраст
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.CompSort">
            Компания
            </a>
        </th>
    </tr>
    @foreach (Emp e in Model)
    {
        <tr>
            <td>
                @e.Name
            </td>
            <td>
                @e.Age
            </td>
            <td>
                @e.Company.Name
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@e.Id">Изменить</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@e.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
