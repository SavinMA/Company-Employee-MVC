@model MyWeb.Models.Emp

<h2>Редактирование</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
            <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />-->
            <div class="form-group">
                <label asp-for="Name" class="control-label">ФИО</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label">Возраст</label>
                <input type="number" asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
        <label asp-for="CompanyID" class="control-label">Возраст</label>
        <input type="number" asp-for="CompanyID" class="form-control" />
        <span asp-validation-for="CompanyID" class="text-danger"></span>
    </div>
        -->
            <div class="form-group">
                <label class="control-label">Компании</label>
                <select name="compName" class="form-control">
                    @foreach (Company company in ViewBag.company)
                    {
                        if (company.Id != Model.CompanyID)
                        {
                            <option>@company.Name</option>
                        }
                        else
                        {
                            <option selected="selected">@company.Name</option>
                        }
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
